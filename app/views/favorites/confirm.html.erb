<div class="container">
  <div class="col-md-10 col-md-offset-1">

    <h3>以下の内容でいいですか？</h3>

    <%= form_for(@favorite) do |f| %>

      <%= f.hidden_field :size_id %>
      <%= f.hidden_field :top_wood_id %>
      <%= f.hidden_field :body_wood_id %>

      <div class="row">
        <div class="col-md-2 col-md-offset-1">
          サイズ：
        </div>
        <div class="col-md-8">
          <%= @size.size %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2 col-md-offset-1">
          トップ材：
        </div>
        <div class="col-md-8">
          <%= @topwood.wood %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2 col-md-offset-1">
          ボディ材：
        </div>
        <div class="col-md-8">
          <%= @bodywood.wood %>
        </div>
      </div>

      <%= f.submit '投稿', class: 'btn btn-info btn-block' %>
    <% end %>

    <%= form_for(@favorite, url: new_favorite_path, method: 'get') do |f| %>
      <%= f.hidden_field :size_id %>
      <%= f.hidden_field :top_wood_id %>
      <%= f.hidden_field :body_wood_id %>
      <%= f.submit "戻る", name: 'back', class: 'btn btn-default btn-block' %>
    <% end %>

  </div>
</div>
