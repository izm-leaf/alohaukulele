<div class="container">
  <div class="wrapper2 col-md-6 col-md-offset-3">

    <h3>以下の内容でいいですか？</h3>

    <%= form_for(@favorite) do |f| %>

      <%= f.hidden_field :size_id %>
      <%= f.hidden_field :top_wood_id %>
      <%= f.hidden_field :body_wood_id %>

      <div class="fav-wrapper col-md-8 col-md-offset-2">
          <%= f.label :size_id %>
          <%= @favorite.size.name %>
      </div>

      <div class="fav-wrapper col-md-8 col-md-offset-2">
          <%= f.label :top_wood_id %>
          <%= @favorite.top_wood.name %>
      </div>

      <div class="fav-wrapper col-md-8 col-md-offset-2">
          <%= f.label :body_wood_id %>
          <%= @favorite.body_wood.name %>
      </div>

      <div class="fav-wrapper col-md-8 col-md-offset-2">

      <%= f.submit '投稿', class: 'btn btn-info btn-block' %>
    <% end %>

    <%= form_for(@favorite, url: new_favorite_path, method: 'get') do |f| %>
      <%= f.hidden_field :size_id %>
      <%= f.hidden_field :top_wood_id %>
      <%= f.hidden_field :body_wood_id %>
      <%= f.submit "戻る", name: 'back', class: 'btn btn-default btn-block' %>
      </div>
    <% end %>

  </div>
</div>
