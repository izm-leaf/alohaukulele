<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>

<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">

    <%= form_for(@favorite, url: confirm_favorites_path) do |f| %>

      <% if @favorite.errors.any? %>
      <div id="error_explanation">
        <h3><%= @favorite.errors.count %>件のエラーがあります。</h3>
        <p>
          <% @favorite.errors.full_messages.each do |msg| %>
            <%= msg %><br>
          <% end %>
        </p>
      </div>
      <% end %>

      <h3>好みの一本を作るとしたら？</h3>

      <div class="fav-wrapper col-md-6 col-md-offset-3 col-xs-8 col-xs-offset-4">
        <div class="row col-md-6 col-xs-10">
          <%= f.label :size_id %>
        </div>

        <div class="row col-md-6 col-xs-10">
          <% @size.each do |size| %>
            <%= f.radio_button :size_id, size.id, {}  %> <%= f.label :size_id, value: size.name %><br>
          <% end %>
        </div>
      </div>

      <div class="fav-wrapper col-md-6 col-md-offset-3 col-xs-8 col-xs-offset-4">
        <div class="row col-md-6 col-xs-10">
          <%= f.label :top_wood_id %>
        </div>
        <div class="row col-md-6 col-xs-10">
          <% @wood.each do |wood| %>
            <%= f.radio_button :top_wood_id, wood.id, {} %> <%= f.label :top_wood_id, value: wood.name %><br>
          <% end %>
        </div>
      </div>

      <div class="fav-wrapper col-md-6 col-md-offset-3 col-xs-8 col-xs-offset-4">
        <div class="row col-md-6 col-xs-10">
          <%= f.label :body_wood_id %>
        </div>
        <div class="row col-md-6 col-xs-10">
          <% @wood.each do |wood| %>
            <%= f.radio_button :body_wood_id, wood.id, {} %> <%= f.label :body_wood_id, value: wood.name %><br>
          <% end %>
        </div>
      </div>

      <div class="fav-wrapper col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1">
      <%= f.submit '投稿', class: 'btn btn-info btn-block' %>
      <%= link_to "戻る", favorites_path, class: 'btn btn-default btn-block' %>
      </div>
    <% end %>

  </div>
</div>
