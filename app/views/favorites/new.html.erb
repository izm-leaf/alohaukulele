<div class="container">
  <div class="col-md-10 col-md-offset-1">

    <%= form_for(@favorite, url: fav_choose_new_or_edit) do |f| %>
      <% if @favorite.errors.any? %>
        <div id="error_explanation">
          <h2><%= @favorite.errors.count %>件のエラーがあります。</h2>

          <ul>
            <% @favorite.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <h3>好みの一本を作るとしたら？</h3>

      <p>
      <div class="row">
        <div class="col-md-2 col-md-offset-1">
          サイズ：
        </div>
        <div class="col-md-8">
          <% @size.each do |size| %>
            <lebel><%= f.radio_button :size_id, size.id %><%= size.size %></label>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2 col-md-offset-1">
          トップ材：
        </div>
        <div class="col-md-8">
          <% @wood.each do |wood| %>
            <lebel><%= f.radio_button :top_wood_id, wood.id %><%= wood.wood %></label>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2 col-md-offset-1">
          ボディ材：
        </div>
        <div class="col-md-8">
          <% @wood.each do |wood| %>
            <lebel><%= f.radio_button :body_wood_id, wood.id %><%= wood.wood %></label>
          <% end %>
        </div>
      </div>
      </p>

      <%= f.submit '投稿', class: 'btn btn-info btn-block' %>
    <% end %>

    <%= link_to "戻る", favorites_path, class: 'btn btn-default btn-block' %>

  </div>
</div>
