<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">

    <h3>以下の内容でいいですか？</h3>

    <%= form_for(@size) do |f| %>

    <%= f.hidden_field :size %>

    <p>サイズ名:<%= @size.size %></p>

    <%= f.submit "追加", class: 'btn btn-info btn-block' %>
  <% end %>

  <%= form_for(@size, url: new_size_path, method: 'get') do |f| %>
    <%= f.hidden_field :size %>
    <%= f.submit "戻る", name: 'back', class: 'btn btn-default btn-block' %>
  <% end %>

  </div>
</div>
