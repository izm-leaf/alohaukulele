<div class="wrapper col-md-6 col-md-offset-3 col-sm-10">

<%= form_for(@size, url: size_choose_new_or_edit) do |f| %>

  <% if @size.errors.any? %>
    <div id="error_explanation">
      <h2><%= @size.errors.count %>件のエラーがあります。</h2>

      <ul>
        <% @size.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h3>サイズ</h3>

  <%= f.text_field :name, class: 'form-control', placeholder: "サイズ名称" %>
  <br>
  <%= f.submit '登録', class: 'btn btn-info btn-block' %>
<% end %>

<%= link_to "戻る", sizes_path, class: 'btn btn-default btn-block' %>
