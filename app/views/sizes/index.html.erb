<div class="container">
  <div class="wood-wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>

    <h3>サイズ</h3>

    <%= link_to "追加する", new_size_path, class: 'btn btn-default' %>

  </div>

  <% @sizes.each do |size| %>

  <div class="wood-wrapper col-md-6 col-md-offset-3 col-sm-10">
    <div class="row col-md-6">
      <%= size.name %>
    </div>
    <div class="row col-md-6">
      <%= link_to "編集", edit_size_path(size.id), class: 'btn btn-sm btn-info' %>
      <%= link_to "削除", size_path(size.id), method: :delete, data: { confirm: '削除していいですか？' }, class: 'btn btn-sm btn-default' %>
    </div>
  </div>

  <% end %>

</div>

